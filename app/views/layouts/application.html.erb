<!-- block of code for android, eliminates interference with mozilla, chrome and safari browsers-integrate later that replaces border and/or border-radius CSS that
don't work with android browser and eliminates side controls, i.e. the pull down menu arrows generated by the <select> tag --!>
	<script>
	$(function () {
  	var nua = navigator.userAgent
  	var isAndroid = (nua.indexOf('Mozilla/5.0') > -1 && nua.indexOf('Android ') > -1 && nua.indexOf('AppleWebKit') > -1 && nua.indexOf('Chrome') === -1)
  	if (isAndroid) {
    $('select.form-control').removeClass('form-control').css('width', '100%')
  }
})
</script>